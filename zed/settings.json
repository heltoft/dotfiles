{
    "features": {
        "copilot": false
    },
    "theme": "One Dark",
    "telemetry": {
        "diagnostics": false,
        "metrics": false
    },
    "ui_font_size": 16,
    "buffer_font_size": 16,
    "format_on_save": "off",
    "language_overrides": {
        "JSON": {
            "tab_size": 2,
            "formatter": {
                "external": {
                    "command": "jq",
                    "arguments": [
                        ".",
                        "{buffer_path}"
                    ]
                }
            }
        }
    }
}
